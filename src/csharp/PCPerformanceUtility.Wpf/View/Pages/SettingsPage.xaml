<Page
    x:Class="PCPerformanceUtility.Wpf.View.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PCPerformanceUtility.Wpf.View.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    Title="SettingsPage"
    d:DesignHeight="675"
    d:DesignWidth="960"
    mc:Ignorable="d">

    <hc:TransitioningContentControl>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height=".2*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Margin="10">
                <Border Background="White" CornerRadius="10" />
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="20">
                    <TextBlock FontWeight="Bold" FontSize="18" Text="设置"/>
                </StackPanel>
            </Grid>
        </Grid>
    </hc:TransitioningContentControl>
</Page>
